<style>
#container {
  position: relative;
}

.head {
  position: relative;
}

.instruction {
  position: relative;
  height: 50px;
  line-height: 50px;
  font-size: 30px;
  text-align: center;
  background: #2C3E50;
  color: white;
}

.hint {
  position: relative;
  height: 50px;
  text-align: center;
  background: #18BC9C;
  color: white;
  font-size: 20px;
  padding-top: 10px;
}

.workspace {
  position: absolute;
  top: 100px;
  left: 0;
  bottom: 0;
  right: 0;
  height: 600px; width: 400px;
}
.workspace .background {
  height: 600px;
  width: auto;
  margin-left: 30px;
  display: block;
  float:left;
}
.sel-box {
  position: absolute;
  border:2px dashed transparent;
  padding:10px;
  height: 70px;
  width: 80px;
  top: 320px;
  left: 350px;
  cursor:pointer;
}
.drink {
  position: absolute;
  top: 200px;
  width: 200px;
  height: auto;
  margin-left: 500px;
  display: block;
  float:left;
  visibility: hidden;
}
.logo{
  height: 100%;
  font-size: 16px;
  font-weight: 700;
  margin-left: 1em;
  float: left;
}
.logout, .fullscreen {
  height: 100%;
  font-size: 16px;
  font-weight: 500;
  float: right;
  margin-right: 1em;
}
</style>
<div id="container">
  <div class="head">
    <div class="instruction">
      <div class="logo has_name" data-msg="logo"></div>
      <div class="logout has_name" data-msg="logout"></div>
      <div class="fullscreen" data-msg="fullscreen"></div>
      <span data-msg="instruction">숨어있는 컴퓨터를 찾아요:자판기 놀이</span>
    </div>
    <div class="hint" data-msg="hint">음료수를 뽑기 위해서 돈을 넣어봐요!</div>
  </div>
  <div class="workspace">
    <div class="sel-box"></div>
    <img class="background" src="img/a1_w1/vm0.png"/>
  </div>
  <img class="drink" src="img/a1_w1/drink.png"/>
</div>

<script>
var hash = location.hash,
    lang = hash.indexOf("lang=en") >= 0 ? "en" : "ko",
    programTitle = store.session.get("showbook", " ").match(/\/engloo/) ? "KIDSCODING" : "KIDSTHINKING",
    msg = {
      ko: {
        logo: programTitle,
        logout: "로그아웃",
        fullscreen: "전체화면",
        previous: "이전으로 돌아가시겠습니까?",
        instruction: "숨어있는 컴퓨터를 찾아요:자판기 놀이",
        hint: "음료수를 뽑기 위해서 동전을 넣어봐요!",
        hint1: "동전이 들어 갔어요! 불이 들어온 버튼을 눌러봐요!",
        hint2: "캔이 떨어졌어요! 음료수를 꺼내봐요!",
        hint3: "음료수를 얻었어요! 맛있게 마셔요!",
        success: "성공!"
      },
      en: {
        logo: programTitle,
        logout: "Log Out",
        fullscreen: "fullscreen",
        previous: "Do you want to move on to the previous step?",
        instruction: "Vending Machine Practice",
        hint: "Try to put a coin to pull out a drink!",
        hint1: "A coin went in! Press the button that lights up!",
        hint2: "The can is down! Take out the soda!",
        hint3: "I got a drink! Have a delicious drink!",
        success: "Success!"
      }
    };
  var step = 1;
  var audio1 = new Audio('img/a1_w1/vm1.mp3');
  var audio2 = new Audio('img/a1_w1/vm2.mp3');
  var audio3 = new Audio('img/a1_w1/vm3.mp3');
  var audio4 = new Audio('img/a1_w1/vm4.mp3');
  var audio5 = new Audio('sound/complete.mp3');
  $("[data-msg]").each(function(idx, el) {
    $(el).text(msg[lang][$(el).data("msg")]);
  });
  $(".sel-box").click(function() {
  	if(step==1){
      audio1.play();
      this.style.height = "80px";
      this.style.width = "100px";
      this.style.top = "140px";
      this.style.left = "70px";
      setTimeout( function () {
        $(".hint").text(msg[lang].hint1);
        $(".background").attr("src","img/a1_w1/vm1.png");
        step = 2;
      }, 1500);
    }else if(step==2){
      audio2.play();
      this.style.height = "80px";
      this.style.width = "260px";
      this.style.top = "450px";
      this.style.left = "75px";
      setTimeout( function () {
        $(".hint").text(msg[lang].hint2);
        $(".background").attr("src","img/a1_w1/vm2.png");
        step = 3;
      }, 1500);
    }else{
      audio3.play();
      sleep(1000);
      audio4.play();
      $(".hint").text(msg[lang].hint3);
      $(".background").attr("src","img/a1_w1/vm3.png");
      $(".drink").css("visibility","visible")
      setTimeout( function () {
        audio5.play();
        $(".hint").text(msg[lang].success);
        setTimeout( function () {
          alert(msg[lang].success);
          document.location.href = '/a1_w2';
        }, 2000);
      }, 8000);
    }
  });

  function sleep(num){	//[1/1000초]
	 var now = new Date();
	   var stop = now.getTime() + num;
	   while(true){
		 now = new Date();
		 if(now.getTime() > stop)return;
	   }
	}

  if(!store.session.get("showbook")){
    $(".has_name").hide();
  }
  $(".logo,.logout").click(function(e) {
    var result = confirm(msg[lang].previous);
    var showBook = store.session.get("showbook");
    if (result && showBook) {
      if (!store.session.get("externallogin")) {
        store.session.clear();
      }
      if ($(this).hasClass("logout")) {
        showBook = showBook.split("#")[0];
      }
      location.href = showBook;
    }
  });
  $(".fullscreen").click(function(e) {
    e.preventDefault();
    e.stopPropagation();
    var doc = window.document;
    var docEl = doc.documentElement;
    var requestFullScreen = docEl.requestFullscreen || docEl.mozRequestFullScreen || docEl.webkitRequestFullScreen || docEl.msRequestFullscreen;
    var cancelFullScreen = doc.exitFullscreen || doc.mozCancelFullScreen || doc.webkitExitFullscreen || doc.msExitFullscreen;
    if (!doc.fullscreenElement && !doc.mozFullScreenElement && !doc.webkitFullscreenElement && !doc.msFullscreenElement) {
      requestFullScreen.call(docEl);
    } else {
      cancelFullScreen.call(doc);
    };
  });
</script>
