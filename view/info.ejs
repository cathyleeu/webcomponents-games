<script id="template" type="text/x-ejs-template">
<div class="card">
  <img class="kidscoding" src="/img/kidscoding.png"/>
  <h1>키즈코딩 로그인<br/><small><?=school?> <?=className?> (<?=month?>월)</small></h1>
  <div class="sub-row">
    <button class="btn btn-lg btn-warning selected"><?=index?> : <?=name?></button>
    <img class="character" src="img/login/<?=img?>.png" />
  </div>
  <div class="sub-row">
    <label class="left">로그인 아이디</label>&nbsp;&nbsp;&nbsp;&nbsp;<label class="right">비밀 캐릭터</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  </div>
</div>
</script>
<div class="page">
</div>
<!--div id="names">

</div-->

<script>
  $(function() {
    var d1 = $.Deferred(),
        d2 = $.Deferred();

    $.get("login/url.json", function(url) {
      var hash = decodeURI(location.hash).slice(1),
          code = hash.split("-")[0],
          className = hash.split("-")[1],
          info = url.filter(function(item) {
            return item.code == code
          })[0],
          classNameChk = Object.keys(info.classes).reduce(function(init, book) {
            return init.concat(info.classes[book]);
          }, []).filter(function(item) {
            return item == className;
          })[0];
      if(!info || className != classNameChk) {
        alert("잘못된 경로로 접근하였습니다.");
        location.href = "/";
      }
      d1.resolve(info);
    });
    $.get("login/names.json", function(names) {
      d2.resolve(names);
    });
    $.when(d1, d2).done(function(info, names) {
      ejs.open = '<?';
      ejs.close = '?>';
      var str = $("#template").html(),
          template = ejs.compile(str),
          className = decodeURI(location.hash).split("-")[1],
          yearmonth = "<%= yearmonth %>",
          imgs = getImgs(yearmonth, info.code, className);
      month = new Date().getMonth() + 1;
      var row = [];
      if(names[info.school + "-" + className]) {
        names = names[info.school + "-" + className]
      } else {
        names = names["default"];
      }
      names.forEach(function(nameArr, index) {
        row.push(template({
          index: (index+1),
          name: $.isArray(nameArr) ? nameArr[1] : nameArr,
          school: info.school,
          className: className,
          month: '' + month,
          img: imgs[index]
        }));
        if(row.length == 2 || index + 1 == names.length) {
          var $row = $('<div class="card-row">').append(row[0]).append(row[1]);
          $(".page").append($row)
          row = [];
        }
      });

    });
  });
</script>
<script type="text/javascript" src="/components/ejs/ejs.min.js"/>
